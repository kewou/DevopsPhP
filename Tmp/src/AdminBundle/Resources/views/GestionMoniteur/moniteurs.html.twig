{% extends "AdminBundle:Admin:index.html.twig" %}


{% block header %}
        <header id="header" class="alt">
        <div id="div_logo">
            <h1 id="logo"><a href="{{path("Admin_accueil")}}"><img src="{{ asset('bundles/public/assets/css/images/logo.jpg')}}" alt="logo" height="60" width="60"/></a></h1>
        </div>          
            <!-- Menu -->
            {% block menu %}
                <nav id="nav">	
                    <a href="{{path("Admin_accueil")}}">Accueil</a> 
                    <a href="{{path("fos_user_security_logout")}}"  id="deconnexionBouton">Deconnexion</a>                    
                </nav>  
            {% endblock %}        
        </header>        
{% endblock %}


{% block contenu %}
    <div id="globalAdmin">        
                {% if user.id==15 %}
                    <h2 id="titreAdmin">Les moniteurs</h2>
                {% else %}
                    <h2 id="titreAdmin">Les coiffeurs</h2>
                {% endif %}		
		<div id="administrationMenu">
			{% for item in moniteurs %}
				<a href="{{path("Admin_moniteur_calendrier",{"idMoniteur":item.id})}}">{{item.nom}} {{item.prenom}}</a>
			{% endfor %}
		</div>
	</div>
 {% endblock contenu %}


